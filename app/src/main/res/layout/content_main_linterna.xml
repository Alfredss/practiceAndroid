<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mundo.hola.com.example.alfre.androidpractice.MainLinternaActivity"
    tools:showIn="@layout/activity_main_linterna">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controlador de Linterna"/>

    <Button
        android:id="@+id/btnBrillar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brillar"/>
    <Button
        android:id="@+id/linternaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/regresar"/>

</LinearLayout>
